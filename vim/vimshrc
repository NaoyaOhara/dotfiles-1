alias ls='ls --color -F $$args'
alias ll='ls --color -Fl $$args'
alias l.='ls --color -Fd .*'
alias vp='vimpager $$args'
alias prove='prove --rc $H/.proverc $$args'
alias h='cd $H'
alias m='cd $M'
alias hub='git'
alias rfd='rspec --format documentation'
alias pl='perl -M"feature qw!say!" -M"Date::Manip qw!UnixDate ParseDate!" -e'
