{
    "title": "Custom shortcut for C-[ to Escape",
    "rules": [{
            "description": "Use left_control+[ to escape",
            "manipulators": [{
                "type": "basic",
                "from": {
                    "key_code": "open_bracket",
                    "modifiers": {
                        "mandatory": [
                            "left_control"
                        ]
                    }
                },
                "to": [{
                    "key_code": "escape"
                }]
            }]
        },
        {
            "description": "Change escape to fn. (Post escape if pressed alone)",
            "manipulators": [{
                "type": "basic",
                "from": {
                    "key_code": "escape",
                    "modifiers": {
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [{
                    "key_code": "fn"
                }],
                "to_if_alone": [{
                    "key_code": "escape"
                }]
            }]
        }
    ]
}
