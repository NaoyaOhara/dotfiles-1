defmonitor on
defmousetrack on
activity ''
attrcolor b ".I"
defscrollback 1000
altscreen on
escape ^Zz
bell_msg "Bell in window %"
shell /usr/local/bin/bash
startup_message off
logfile "$HOME/.screen/screen-%Y%m%d-%n.log"
deflog on
shelltitle '$ |bash'
rendition bell "=ub" "RY"
rendition monitor "=b" "BW"
rendition silence "=u" "WK"
rendition so "=" "Rk"

