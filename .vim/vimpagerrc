set encoding=utf-8
scriptencoding utf-8

if &compatible
  " vint: -ProhibitSetNoCompatible
  set nocompatible               " Be iMproved
  " vint: +ProhibitSetNoCompatible
endif

if len($H)
  let g:home = expand('$H')
  set runtimepath-=~/.vim
  set runtimepath+=$H/.vim
else
  let g:home = expand('~')
endif

let g:vim_home = g:home . '/.vim'
let g:rc_dir = g:vim_home . '/rc'
execute 'source' g:rc_dir . '/dein.vim'

" デフォルトプラグインを無効化
let g:loaded_getscriptPlugin = 1
let g:loaded_logipat = 1
let g:loaded_rrhelper = 1
let g:loaded_vimballPlugin = 1
if ! has('gui_running')
  let g:plugin_scrnmode_disable = 1
endif

colorscheme solarized
augroup SetSearchColor
  autocmd!
  autocmd VimEnter * hi! link Search IncSearch
augroup END
set background=light
set t_ut=
set t_Co=256
set termencoding=utf-8
if ! (has('gui_macvim') && has('kaoriya'))
  set fileencodings=ucs-bom,utf-8,eucjp,cp932,ucs-2le,latin1,iso-2022-jp
endif
set list                 " 空白の可視化
set listchars=tab:›\ ,trail:␣,eol:჻,extends:»,precedes:«,nbsp:¯

let g:vimpager = get(g:, 'vimpager', {})
let g:less     = get(g:, 'less', {})

let g:less.enabled = 1
let g:vimpager.gvim = 0
let g:vimpager.passthrough = 1
let g:less.number = 1
let g:less.hlsearch = 1
let g:vimpager.X11 = 0
let g:less.scrolloff = 5
let g:vimpager.ansiesc = 1

if exists('g:vimpager.enabled')
  if exists('g:vimpager.ptree') && len(g:vimpager.ptree) > 1 && g:vimpager.ptree[-2] ==# 'wman'
    set ft=man
  endif
endif

" vim:ft=vim et:
