{
	"default_module": "powerline.segments.common",
	"segment_data": {
		"weather": {
			"args": {
				"location_query": "tokyo, japan",
				"icons": {
					"day":           "⚪",
					"blustery":      "⚠",
					"rainy":         "☔",
					"cloudy":        "☁",
					"snowy":         "❄",
					"stormy":        "⚡",
					"foggy":         "🌁",
					"sunny":         "☼",
					"night":         "🌙",
					"windy":         "🚩",
					"not_available": "🚫",
					"unknown":       "❔"
				}
			}
		},
		"email_imap_alert": {
			"before": "📩  ",
			"args": {
				"username": "",
				"password": "",
				"max_msgs": 50
			}
		},
		"cpu_load_percent": {
			"args": {
				"format": "💻 {0:4.1f}%"
			}
		},
		"used_memory_percent_gradient": {
			"args": {
				"format": "🔲 {0:4.1f}%"
			}
		},
		"host_battery": {
			"args": {
				"format": "🔋 {percent:2d}% ({status}{remain})",
				"charging": "充電中",
				"charged": "充電完了",
				"remain": "残り {0}",
				"gamify": true,
				"steps": 10,
				"heart_glyph": "★",
				"battery_glyph": "🔋",
				"charge_glyph": "⚡"
			}
		},
		"system_load": {
			"args": {
				"threshold_good": 0.25,
				"threshold_bad": 0.5
			}
		},
		"now_playing": {
			"args": {
				"username": "delphinus_iddqd",
				"api_key": "7a77671178c4f4cff16222c46f72d193",
				"format": "{state_symbol} {artist} - {title}",
				"shorten_artist": false,
				"shorten_title": false,
				"interval": 30
			}
		},
		"last_message": {
			"args": {
				"format": "{body}",
				"max_length": 50
			}
		}
	},
	"segments": {
		"right": [
			{
				"function": "email_imap_alert",
				"priority": 50
			},
			{
				"function": "ext.tmux.segments.host_info.last_message",
				"priority": 30
			},
			{
				"function": "weather",
				"priority": 30
			},
			{
				"function": "ext.tmux.segments.nowplayinglastfm.now_playing",
				"priority": 80
			},
			{
				"function": "ext.tmux.segments.ps.cpu_load",
				"priority": 50
			},
			{
				"function": "ext.tmux.segments.ps.used_memory",
				"priority": 30
			},
			{
				"function": "ext.tmux.segments.host_info.host_battery",
				"priority": 80
			},
			{
				"function": "date",
				"priority": 80
			},
			{
				"function": "date",
				"args": {
					"format": "%H:%M",
					"istime": true
				},
				"priority": 10
			},
			{
				"function": "hostname",
				"priority": 10
			}
		]
	}
}
